<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/page-profile.css">
    <link rel="stylesheet" href="/css/page-events-list.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <%- include ('partials/header.ejs')%>
    <div class="user-info">
        <h1>Olá, Evandro</h1>
        <p>evandromateus06@gmail.com</p>
        <button><i class='bx bx-log-out'></i>Sair</button>
    </div>
    
    <main class="events-list">
        <p>Estes são os eventos que você publicou</p>
        <hr>

        <% events.forEach(event => { %>
            <a href="/evento/<%= event.id %>">
                <div class="event-card">

                    <img src="/<%= event.image.split('/')[1]+'/'+event.image.split('/')[2] %>" alt="">

                    <div class="info-card">
                        <h2><%= event.name %></h2>
                        <span><%= event.date %> - <%= event.category %></span>
                        <div class="btn-edit-delete">

                            <a href="/editar/<%= event.id %>" class="btn edit"><i class='bx bx-edit'></i>Editar</a>
                            <a href="/apagar/<%= event.id %>"  class="btn delete"><i class='bx bx-trash'></i>Excluir</a>

                        </div>
                    </div>
                </div>
            </a>
        <% }) %>

    </main>


    <%- include('partials/firebase.ejs') %>
    <script src="/scripts/page-logout.js"></script>
</body>
</html>